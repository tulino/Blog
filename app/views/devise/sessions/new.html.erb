
<div class="container">
<div class="page-header">
    <h2>Log in</h2>
  </div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.input :email %><br />
    
  </div>

  <div class="field">
    <%= f.input :password %><br />
    
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.button:submit  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>