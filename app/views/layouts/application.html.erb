<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" <%= link_to 'New article', new_article_path %>
         </a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav nav-pills pull-right">
           <% if user_signed_in?%>
          <a class="navbar-brand"  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
          </a>
           <% else %>
           <a class="navbar-brand" <%= link_to "Sign up",new_user_registration_path %>
          </a>
          <a class="navbar-brand"  <%= link_to "Sign In",new_user_session_path %>
          </a>
          <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
  <p></p>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> 
    <%= yield %>
  </body>
</html>
