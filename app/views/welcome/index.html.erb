
 <div class="container">
   <div class="page-header">
    <h2>Listing Articles</h2>
    </div>
  <table style="width:85%">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article) %></td>

      </tr>
    <% end %>
  </table>
</div>