.container
  .jumbotron
    %p
      %strong Title:
      = @article.title
    %p
      %strong Text:
      = @article.text
  .jumbotron
    %h2 Comments
    = render @article.comments
    - if user_signed_in?
      %h2 Add a comment:
      = render 'comments/form'
    = link_to 'Edit', edit_article_path(@article)
    |
    \#{link_to 'Back', articles_path}
