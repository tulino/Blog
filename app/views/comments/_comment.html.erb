<div class="container">

  <h4>Commenter:<h4>
  <%= comment.commenter %>

 
<p>
  <h4>Comment:</h4>
  <%= comment.body %>
</p>
 
<p><% if user_signed_in? && current_user.id == @article.user_id && current_user.id == comment.user_id %>
  <%= link_to 'Destroy Comment', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
   <% end %>
</p>
</div>